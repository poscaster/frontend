{
  "name": "poscaster",
  "version": "0.0.0",
  "repository": "git://github.com/poscaster/frontend.git",
  "scripts": {
    "lint": "eslint --ext js,jsx src specs",
    "build": "webpack --config webpack.prod.config.js",
    "dev:build": "webpack --config webpack.dev.config.js",
    "dev:serve": "webpack-dev-server --config webpack.dev.config.js",
    "test": "env BABEL_DISABLE_CACHE=1 NODE_ENV=test babel-node node_modules/.bin/babel-istanbul cover _mocha -- -R spec --require ./specs/specs_helper.js \"specs/**/*@(.js|.jsx)\"",
    "test:watch": "env BABEL_DISABLE_CACHE=1 NODE_ENV=test mocha --compilers js:babel-register --require babel-polyfill --require ./specs/specs_helper.js \"specs/**/*@(.js|.jsx)\" --watch"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-1"
    ]
  },
  "engines": {
    "node": "~>6"
  },
  "dependencies": {
    "immutable": "^3.8.1",
    "react": "~15.3.0",
    "react-dom": "~15.3.0",
    "react-redux": "~4.4.5",
    "react-router": "^2.8.1",
    "react-router-redux": "^4.0.6",
    "redux": "~3.6.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "autoprefixer-loader": "^3.2.0",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-istanbul": "^0.11.0",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "~6.16.0",
    "babel-preset-react": "~6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.2",
    "chai-immutable": "^1.6.0",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.25.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.8.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "file-loader": "^0.9.0",
    "ignore-styles": "^5.0.1",
    "image-webpack-loader": "^2.0.0",
    "jsdom": "^9.7.1",
    "mocha": "^3.1.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-immutable-proptypes": "^2.1.0",
    "redux-mock-store": "^1.2.1",
    "sass-loader": "^4.0.2",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2"
  }
}
